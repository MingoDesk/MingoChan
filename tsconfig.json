{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es7"],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "sourceMap": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "types": ["node"],
    "declaration": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["/usr/src/app/src/**/*", "/usr/src/app/src/**/*.json"]
}
