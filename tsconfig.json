{
	"compilerOptions": {
		"outDir": "dist",
		"noImplicitAny": false,
		"module": "commonjs",
		"noUnusedParameters": true,
		"target": "es2017",
		"lib": ["es7"],
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": "./src",
		"esModuleInterop": true,
		"sourceMap": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"node",
			"express",
			"dotenv",
			"mongodb",
			"redis",
			"connect-redis",
			"cookie-parser",
			"express-session",
			"bcrypt",
			"jest",
		],
		"declaration": true,
		"resolveJsonModule": true,
		"paths": {
			"@middleware/*": ["middleware/*"],
			"@database/*": ["database/*"],
			"@routes/*": ["routes/*"],
			"@util/*": ["util/*"],
			"@errors/*": ["errors/*"],
			"@config/*": ["config/*"],
			"@lib/*": ["lib/*"],
			"@tickets/*": ["routes/tickets/*"],
			"@analytics/*": ["routes/analytics/*"],
			"@auth/*": ["routes/auth/*"],
			"@system/*": ["routes/system/*"],
			"@user/*": ["routes/user/*"],
			"@security/*": ["security/*"],
			"@@types/*": ["types/*"],
		}
	},
	"exclude": ["node_modules", "dist", "tests"],
	"include": ["src/**/*", "src/**/*.json"]
}
