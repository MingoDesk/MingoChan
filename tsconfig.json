{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es7"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "sourceMap": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "express",
      "dotenv",
      "mongodb",
      "redis",
      "connect-redis",
      "cookie-parser",
      "express-session",
      "bcrypt"
    ],
    "declaration": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "src/**/*.json"]
}
